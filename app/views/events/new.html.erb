<%= form_for @event do |f| %>
	<div class="event-fields">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="event-fields">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

	<div class="event-fields">
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div>

	<div class="event-fields">
		<%= f.label :start_time %>
		<%= f.date_field :start_time %>
	</div>

	<div class="event-fields">
		<%= f.label :end_time %>
		<%= f.date_field :end_time %>
	</div>

	<div class="event-fields">
		<%= f.submit :submit %>
	</div>

<% end %>